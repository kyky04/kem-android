<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_small">

    <View
        android:id="@+id/view_benar"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/red_900" />


    <LinearLayout
        android:id="@+id/llClik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">


        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:drawableTint="@color/colorAccent"
            android:text="Rizki Fauzi Rahman"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
             />

        <TextView
            android:id="@+id/jumlahKata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:drawableTint="@color/colorAccent"
            android:text="Jumlah Kata : 123"
            android:textSize="16dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/soal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_small"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_soal"
                android:tint="@color/red_900"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_small"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_clear_black"
                android:tint="@color/red_900" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

